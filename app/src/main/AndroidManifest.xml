<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.wafflestudio.snucse.minhall"
    >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MinHall"
        >

        <activity
            android:name=".view.ui.splash.SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.MinHall.Launcher"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".view.ui.login.LoginActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.MinHall.Login"
            android:windowSoftInputMode="adjustResize"
            />

        <activity
            android:name=".view.ui.main.MainActivity"
            android:screenOrientation="portrait"
            />

        <receiver android:name=".notification.AlarmReceiver" />

    </application>

</manifest>